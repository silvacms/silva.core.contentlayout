<tal:block define="base python:(request['ACTUAL_URL'].startswith('https') and 'https' or 'http') + '://ajax.googleapis.com/ajax/libs/yui/2.8.1/build/'">
<link type="text/css" rel="stylesheet" tal:attributes="href python:base + 'fonts/fonts-min.css'" />
<link type="text/css" rel="stylesheet" tal:attributes="href python:base + 'assets/skins/sam/skin.css'" />
<!-- YUI JavaScript -->
<tal:block repeat="file python:['utilities/utilities.js','container/container-min.js','menu/menu-min.js','button/button-min.js', 'logger/logger-min.js','selector/selector-min.js','resize/resize-min.js', 'cookie/cookie-min.js','layout/layout-min.js']">
<script type="text/javascript" tal:attributes="src python:base + file"></script>
</tal:block>
</tal:block>

<script type="text/javascript"
    tal:attributes="src string:${request/resourcebase/absolute_url}/++resource++silva.core.contentlayout.browser.resources/cl.js"></script>
<script type="text/javascript">
(function() {
  if (window.parent != window) { /* being loaded inside  a frame */
        window.InnerLayoutApp = new YAHOO.bethel.contentlayout.InnerLayoutApp();
        YAHOO.util.Event.onDOMReady(function() { 
          window.parent.ContentLayoutApp._editorFrameLoaded();
        });
    };
})();
</script>

<link rel="stylesheet" type="text/css"
    tal:attributes="href string:${request/resourcebase/absolute_url}/++resource++silva.core.contentlayout.browser.resources/layouteditor.css" />
