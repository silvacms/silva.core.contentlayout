<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/@@standard_macros/page">
  <body>
    <div metal:fill-slot="body"
      tal:define="templates context/getTemplates">
      <p class="system-msg"
         tal:condition="view/status"
         tal:content="view/status">Status</p>
      <p class="system-msg"
         tal:condition="view/errors">
        <tal:error tal:repeat="error view/formErrors">
          <span tal:replace="error/title" />
          <br tal:condition="not:repeat/error/end" />
        </tal:error>
      </p>

      <h2 tal:condition="view/label"
          tal:content="view/label">Label</h2>

      <p tal:condition="view/description"
         tal:content="view/description">Description</p>
         <div>
      <ul>
       <tal:rep repeat="t templates">
        <li tal:define="name python:t[0]; template python:t[1]">
         <h4 tal:content="template/name" style="margin-bottom: 1ex" />
         <div tal:content="string:Name: $name" />
         <div tal:content="string:Description: ${template/description}" />
         <div tal:content="python:'Slots: ' + ', '.join(template.slotnames)" />
        </li>
       </tal:rep>
      </ul>

      </div>
    </div>
  </body>
</html>
