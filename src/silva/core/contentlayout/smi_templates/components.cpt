<div title="Place components" class="contentlayout-components"
     i18n:domain="silva"
     i18n:attributes="title">
  <tal:block tal:repeat="block view.blocks">
    <h3><a href="#" tal:content="block.title">Title</a></h3>
    <div>
      <div class="contentlayout-component"
           tal:repeat="component block.components"
             tal:attributes="data-block-name component.identifier">
        <img src="${icon}" alt="${component.title}"
             tal:condition="icon is not None"
             tal:define="icon component.get_icon(view)"/>
        <span class="component-name" tal:content="component.title" />
        <div clear="both" />
      </div>
    </div>
  </tal:block>
</div>
